<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_horizontal_line"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@mipmap/list_line_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"
        >
        <TextView
            android:id="@+id/tv_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="324"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/size_16"/>

        <TextView
            android:id="@+id/tv_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/size_16"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_product_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_account"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/size_16"/>

        <TextView
            android:id="@+id/tv_sale_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sale_account"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_969696"
            android:layout_marginLeft="@dimen/margin_15"
            android:textSize="@dimen/size_16"/>
    </LinearLayout>

    <com.ghg.tobacco.custom_view.MyProgressBar
        android:id="@+id/myProgressBar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_height="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_horizontal_line"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@mipmap/list_line_white"/>
</LinearLayout>