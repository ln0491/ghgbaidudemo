<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/base_title"
        android:id="@+id/layout_tilte"/>
    <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapView"
        android:layout_below="@id/layout_tilte">

    </com.baidu.mapapi.map.MapView>


    <TextView
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_tilte"
        android:background="@mipmap/map_float_bg"
        android:gravity="center_horizontal"
        android:paddingTop="9dp"
        android:textSize="@dimen/size_15"
        android:textColor="@color/color_686868"
        android:layout_marginTop="10dp"
        android:text="@string/map_tip"
        >

    </TextView>



<LinearLayout
    android:id="@+id/container_province_buy"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:background="@mipmap/business_map_bottom_bg"
    android:layout_margin="@dimen/margin_10"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/tv_province_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_323232"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_20"
        android:text="广东省烟草专局"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="@dimen/size_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_10">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_map_little_blue"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_969696"
            android:layout_marginRight="@dimen/margin_20"
           android:text="广东省广州市烟草大夏"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/size_12"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_province_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_38c4a9"
            android:gravity="center"
            android:background="@drawable/selector_btn_main_menu"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:text="@string/province_buy"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/size_12"/>
        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_lower_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_38c4a9"
            android:text="@string/underling_province_buy"
            android:background="@drawable/selector_btn_main_menu"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/size_12"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_above="@id/container_province_buy"
        android:background="@color/color_transparent">


        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="120dp">

            <com.ghg.tobacco.custom_view.MapZoomImageView
                android:id="@+id/zoom"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@mipmap/zoom_n"/>
            <ImageView
                android:id="@+id/zoom_in"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@mipmap/zoom_in"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/zoom_out"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@mipmap/zoom_out"
                android:visibility="gone"/>
        </RelativeLayout>




        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@mipmap/btn_location"/>


    </LinearLayout>




</RelativeLayout>