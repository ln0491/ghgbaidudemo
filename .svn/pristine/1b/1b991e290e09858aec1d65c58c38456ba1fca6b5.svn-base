<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/image_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/yancao"/>

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/height_btn"
                android:layout_height="@dimen/height_btn"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_25"
                android:src="@drawable/selector_btn_back_circle"/>


            <ImageView
                android:id="@+id/image_infor"
                android:layout_width="@dimen/height_btn"
                android:layout_height="@dimen/height_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_25"
                android:src="@drawable/selector_btn_detail_circle"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f5f5f5"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_25"
            android:paddingTop="@dimen/margin_25"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/size_18"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@mipmap/list_line"/>

        <RelativeLayout
            android:id="@+id/container_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_25"
                android:drawableLeft="@mipmap/btn_purchase"
                android:drawablePadding="@dimen/margin_15"
                android:gravity="center"
                android:text="进货"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/size_18"/>

            <ImageView
                android:id="@+id/btn_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_right_arrow_n"/>

            <TextView
                android:id="@+id/tv_purchase_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_right_arrow"
                android:text="472万箱"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/size_16"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@mipmap/list_line"/>

        <RelativeLayout
            android:id="@+id/container_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_25"
                android:drawableLeft="@mipmap/btn_sales"
                android:drawablePadding="@dimen/margin_15"
                android:gravity="center"
                android:text="销量"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/size_18"/>

            <ImageView
                android:id="@+id/btn_right_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_right_arrow_n"/>

            <TextView
                android:id="@+id/tv_sales_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_right_arrow2"
                android:text="520万箱"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/size_16"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@mipmap/list_line"/>

        <RelativeLayout
            android:id="@+id/container_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_25"
                android:drawableLeft="@mipmap/btn_stock_size"
                android:drawablePadding="@dimen/margin_15"
                android:gravity="center"
                android:text="库存"
                android:textColor="@color/color_323232"
                android:textSize="@dimen/size_18"/>

            <ImageView
                android:id="@+id/btn_right_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_right_arrow_n"/>

            <TextView
                android:id="@+id/tv_stock_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_right_arrow3"
                android:text="5120万箱"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/size_16"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@mipmap/list_line"/>

       <LinearLayout
           android:id="@+id/container_on_the_way"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:visibility="gone"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:paddingBottom="@dimen/margin_5"
               android:paddingTop="@dimen/margin_5"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/margin_25"
                   android:drawableLeft="@mipmap/car_on_the_way"
                   android:drawablePadding="@dimen/margin_15"
                   android:gravity="center"
                   android:text="车辆在途"
                   android:textColor="@color/color_323232"
                   android:textSize="@dimen/size_18"/>

               <ImageView
                   android:id="@+id/btn_right_arrow4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/btn_right_arrow_n"/>

               <TextView
                   android:id="@+id/tv_on_the_way_nums"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toLeftOf="@id/btn_right_arrow4"
                   android:text="12辆/20万箱"
                   android:textColor="@color/color_969696"
                   android:textSize="@dimen/size_16"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:layout_marginRight="@dimen/margin_15"
               android:layout_marginLeft="@dimen/margin_15"
               android:background="@mipmap/list_line"/>
       </LinearLayout>
    </LinearLayout>
</ScrollView>