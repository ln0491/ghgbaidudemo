<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    tools:context=".ui.CompanyYellowPagesActivity"
    >


    <include layout="@layout/base_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="@dimen/margin_25"
                >


                <com.baidu.mapapi.map.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_transparent">


                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="120dp">

                        <com.ghg.tobacco.custom_view.MapZoomImageView
                            android:id="@+id/zoom"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:src="@mipmap/zoom_n"/>
                        <ImageView
                            android:id="@+id/zoom_in"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:src="@mipmap/zoom_in"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/zoom_out"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:src="@mipmap/zoom_out"
                            android:visibility="gone"/>
                    </RelativeLayout>




                    <ImageView
                        android:id="@+id/btn_location"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin_5"
                        android:src="@mipmap/btn_location"/>


                </LinearLayout>

            </RelativeLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:src="@mipmap/infor_company"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_company_infor"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_323232"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>


            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_gravity="center_vertical"
                    android:text="@string/address"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_969696"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_address"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_60"
                    android:layout_marginRight="@dimen/margin_10"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_323232"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tel"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_969696"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tel"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="@dimen/margin_10"
                    android:textColor="@color/color_323232"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_gravity="center_vertical"
                    android:text="@string/email"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_969696"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_email"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_60"
                    android:layout_marginRight="@dimen/margin_10"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_323232"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_gravity="center_vertical"
                    android:text="@string/postcode"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_969696"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_postcode"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="29dp"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_323232"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_gravity="center_vertical"
                    android:text="@string/website"
                    android:textSize="@dimen/size_16"
                    android:textColor="@color/color_969696"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_website"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_60"
                    android:textSize="@dimen/size_16"
                    android:textColor="#467ac6"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@mipmap/list_line"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
